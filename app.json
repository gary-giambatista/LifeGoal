{
	"expo": {
		"name": "lifegoal",
		"slug": "lifegoal",
		"version": "1.0.0",
		"plugins": [
			"@react-native-google-signin/google-signin", // google social auth
			"@react-native-firebase/app", //connect react native fb
			"expo-notifications" // enable notifications
		],
		"orientation": "portrait",
		"icon": "./assets/icon.png",
		"userInterfaceStyle": "automatic",
		"splash": {
			"image": "./assets/splash.png",
			"resizeMode": "contain",
			"backgroundColor": "#ffffff"
		},
		"updates": {
			"fallbackToCacheTimeout": 0
		},
		"assetBundlePatterns": ["**/*"],
		"ios": {
			"supportsTablet": true
			//need to insert bundle for IOS auth
		},
		"android": {
			"googleServicesFile": "./google-services.json", //for google auth
			"adaptiveIcon": {
				"foregroundImage": "./assets/adaptive-icon.png",
				"backgroundColor": "#FFFFFF"
			},
			"package": "com.ggg3.lifegoal" // for android auth
		},
		"web": {
			"favicon": "./assets/favicon.png"
		},
		"extra": {
			"eas": {
				"projectId": "b40614f7-cc1b-488a-984f-6476314f14c1"
			}
		}
	}
}
